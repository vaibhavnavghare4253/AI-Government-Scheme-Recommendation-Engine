# Application
APP_NAME=Government Scheme Recommendation Platform
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/schemes_db

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Buckets
S3_BUCKET_DOCUMENTS=scheme-documents-dev
S3_BUCKET_ASSETS=scheme-assets-dev

# Cognito
COGNITO_USER_POOL_ID=ap-south-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=ap-south-1

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Services
BEDROCK_MODEL_ID=anthropic.claude-v2
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# DynamoDB
DYNAMODB_SESSIONS_TABLE=user-sessions-dev
DYNAMODB_CACHE_TABLE=scheme-cache-dev

# OpenSearch
OPENSEARCH_ENDPOINT=https://search-xxxxxx.ap-south-1.es.amazonaws.com
OPENSEARCH_INDEX=schemes

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
